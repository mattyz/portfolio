<div class="container">
  <div class="row">
    <div class="col-md-7">
      <p><%= image_tag portfolio_img(@portmanteau.main_image.url,'main') unless @portmanteau.main_image.nil? %> </p>
    </div>
    <div class="col-md-5">
      <h1><%= @portmanteau.title %></h1>
      <hr>
      <em><%= @portmanteau.subtitle %></em>

      <p><%= @portmanteau.body%> </p>

      <hr>

      <h3>Technologies Used </h3>
      <% @portmanteau.technologies.each do |t| %>
        <p> <%= t.name %> </p>
      <% end %>

      <% if logged_in?(:site_admin) %>
        <div class="col-md-12">
        <%= link_to "Edit Item", edit_portmanteau_path(@portmanteau), class: 'btn btn-warning' %>
        </div>
      <% end %>

    </div>
  </div>
</div>

