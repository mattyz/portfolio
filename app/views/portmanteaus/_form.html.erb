<%= form_with(model: @portmanteau, local: true) do |form| %>
  <% if @portmanteau.errors.any? %>
    <% @portmanteau.errors.full_messages.each do |message| %>
      <%= alert_generator message %>
      <%#= js add_gritter(message, title: "Error", sticky: false) %>
    <% end %>
  <% end %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :subtitle %>
        <%= form.text_field :subtitle, class: 'form-control'%>
      </div>

      <div class="form-group">
        <label class="btn btn-primary">
         Upload a main image file <%= form.file_field :main_image, style: "display:none;" %>
      </div>

      <div class="form-group">
        <label class="btn btn-primary">
         Upload a thumb image file <%= form.file_field :thumb_image, style: "display:none;" %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :body%>
        <%= form.text_area :body, rows: 13, class: 'form-control' %>
      </div>
    </div>
  </div>

    <hr>
    <div class="col-md-12">
      <h2> Technologies Used: </h2>
      <div>
        <%= form.fields_for :technologies do |tech_form| %>
          <%=  render 'technology_fields', form: tech_form %>
        <% end %>

        <div>
          <%= link_to_add_association 'Add Technology Fields', form, :technologies %>
      </div>

      <div class="form-group">
        <%= form.submit 'Save Portfolio Item', class: 'btn btn-primary btn-block' %>
      </div>
    </div>
  <% end %>

